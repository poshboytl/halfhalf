<div class="flex-1 flex flex-col h-full" data-controller="chat" data-chat-conversation-id-value="<%= conversation.id %>">
  <!-- Header -->
  <header class="flex items-center justify-between px-4 py-3 border-b border-gray-700 bg-gray-800">
    <div class="flex items-center gap-3">
      <h2 class="text-lg font-semibold text-white truncate max-w-md"><%= conversation.title %></h2>
      <span class="text-xs text-gray-500 bg-gray-700 px-2 py-0.5 rounded">
        <%= conversation.project.name %>
      </span>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to edit_conversation_path(conversation), class: "p-2 text-gray-400 hover:text-white transition" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      <% end %>
    </div>
  </header>

  <!-- Messages -->
  <div class="flex-1 overflow-y-auto p-4 space-y-4" id="messages-container" data-chat-target="messages">
    <% messages.each do |message| %>
      <%= render "conversations/message", message: message %>
    <% end %>
    
    <% if messages.empty? %>
      <div class="flex items-center justify-center h-full text-gray-500">
        <p>Start the conversation...</p>
      </div>
    <% end %>
  </div>

  <!-- Input -->
  <div class="p-4 border-t border-gray-700 bg-gray-800">
    <%= form_with url: conversation_messages_path(conversation), 
                  method: :post,
                  data: { 
                    chat_target: "form",
                    action: "submit->chat#send"
                  },
                  class: "flex gap-3" do |f| %>
      <div class="flex-1">
        <%= f.text_area :content, 
            placeholder: "Message...",
            rows: 1,
            class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none",
            data: { 
              chat_target: "input",
              action: "keydown->chat#handleKeydown input->chat#autoResize"
            } %>
      </div>
      <button type="submit" 
              class="px-4 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-medium transition disabled:opacity-50 disabled:cursor-not-allowed"
              data-chat-target="submit">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
        </svg>
      </button>
    <% end %>
  </div>
</div>
