<% if @conversation %>
  <!-- 显示最近的对话 -->
  <%= render "conversations/chat", conversation: @conversation, messages: @messages %>
<% else %>
  <!-- 欢迎页面 -->
  <div class="flex-1 flex items-center justify-center">
    <div class="text-center max-w-md">
      <h2 class="text-2xl font-bold text-white mb-4">Welcome to Half & Half ☕</h2>
      <p class="text-gray-400 mb-8">
        Start a conversation with your AI assistant. 
        Create projects to organize your work.
      </p>
      
      <div class="space-y-4">
        <% if current_user.projects.any? %>
          <%= link_to new_project_conversation_path(current_user.projects.first),
              class: "inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-medium transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            New Conversation
          <% end %>
        <% else %>
          <%= link_to new_project_path,
              class: "inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-medium transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Create Your First Project
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
