<div class="flex-1 flex items-center justify-center">
  <div class="w-full max-w-md">
    <h2 class="text-2xl font-bold text-white mb-6 text-center">New Conversation</h2>
    
    <%= form_with model: [@project, @conversation], class: "space-y-4" do |f| %>
      <div>
        <%= f.label :title, class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= f.text_field :title, 
            placeholder: "What would you like to discuss?",
            autofocus: true,
            class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <% if @project %>
        <p class="text-sm text-gray-500">
          Creating in: <span class="text-gray-300"><%= @project.name %></span>
        </p>
      <% end %>
      
      <div class="flex gap-3">
        <%= link_to "Cancel", :back, class: "flex-1 px-4 py-3 bg-gray-700 hover:bg-gray-600 rounded-lg text-white text-center transition" %>
        <%= f.submit "Start Conversation", class: "flex-1 px-4 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-medium cursor-pointer transition" %>
      </div>
    <% end %>
  </div>
</div>
