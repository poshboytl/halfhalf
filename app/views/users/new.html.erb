<div class="min-h-full flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold">Half & Half ðŸ«–</h1>
      <p class="mt-2 text-gray-400">åˆ›å»ºè´¦æˆ·</p>
    </div>

    <%= form_with model: @user, url: signup_path, class: "mt-8 space-y-6" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-900/50 border border-red-500 rounded-lg p-4">
          <ul class="list-disc list-inside text-red-300">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <label for="user_email" class="block text-sm font-medium text-gray-300">Email</label>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-lg bg-gray-800 border-gray-700 text-white px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-300">Password</label>
          <%= f.password_field :password, class: "mt-1 block w-full rounded-lg bg-gray-800 border-gray-700 text-white px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <div>
          <label for="user_password_confirmation" class="block text-sm font-medium text-gray-300">Confirm Password</label>
          <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-lg bg-gray-800 border-gray-700 text-white px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>
      </div>

      <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition">
        Sign up
      </button>
    <% end %>

    <p class="text-center text-gray-400">
      Already have an account?
      <%= link_to "Log in", login_path, class: "text-blue-400 hover:underline" %>
    </p>
  </div>
</div>
